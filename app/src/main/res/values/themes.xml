<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorRedTheme</item>
        <item name="actionBarStyle">@style/CustomBar</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@color/colorDark</item>
    </style>

    <style name = "CustomBar" parent = "AppTheme">
        <item name = "background">@drawable/element_toolbar</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorRedTheme</item>
        <item name="android:windowBackground">@drawable/activity_splash</item>
        <item name="android:navigationBarColor">@color/colorRedTheme</item>
    </style>
</resources>